<div class="container d-flex flex-column align-items-center">
  <div class="my-4">
    <p class="h1">Account Login</p>
  </div>
  <form action="/login" method="POST">
    <div class="form-group row">
      <input type="text" class="md-2" id="email" name="email" placeholder="Email">
    </div>
    <div class="form-group row">
      <input type="text" class="md-2" id="password" name="password" placeholder="Password">
    </div>
    <div class="form-group row">
      <div class="col text-center">
        <button type="submit" class="btn btn-outline-dark">Sign in</button>
      </div>
    </div>
  </form>
</div>